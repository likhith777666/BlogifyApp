<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>
<body>
  <%- include('./partials/Nav') %>
   
  <div class="container mt-4">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.covetImagURL %>" alt="" width="700px">
    <pre><%= blog.body %></pre>
  </div>

  <div class="container mt-4">
    <% if (blog.createdBy) { %>
      <img src="<%= blog.createdBy.ProfileImageUrl %>" alt="" width="100px"><%= blog.createdBy.Name %>
    <% } %>
  </div>








  <% if (locals.user) { %>
    <div class="container mt-3">
      <form action="/UserComments/<%= blog._id %>" method="POST">
        <input type="text" name="usercontent" class="form-control" placeholder="Enter your comment" required>
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </form>
    </div>
  <% } %>

    <div class="container mt-4">
    <%  allComments.forEach(comment=> { %>
     <div class="mb-3"><img src="<%= comment.createdBy.ProfileImageUrl %>" alt="" width="60px"><%= comment.createdBy.Name %>
      <p> <%= comment.usercontent %> </p></div>
      
    <%  }) %>
    </div>

  <%- include('./partials/script') %>
</body>
</html>
